<Window x:Class="PaintForTheWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintForTheWin"
        mc:Ignorable="d"
        Title="Paint For The Win">

    <Grid Background="LightGray">
        <Menu VerticalAlignment="Top" Height="17">
            
        </Menu>
        <Canvas x:Name="canvasNode" Background="White" Margin="36,17,0,0" HorizontalAlignment="Left" Width="683" Height="463" VerticalAlignment="Top"/>
        <ToolBarTray HorizontalAlignment="Left" Width="36" Orientation="Vertical" Margin="0,17,0,0">
            <ToolBar x:Name="toolBar" HorizontalAlignment="Right" Width="36" ToolBarTray.IsLocked="True" >
                <Button x:Name="button" Content="" Width="28">
                    <Button.Background>
                        <ImageBrush ImageSource="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/Black_pencil.svg/1024px-Black_pencil.svg.png"/>
                    </Button.Background>
                </Button>

            </ToolBar>
        </ToolBarTray>

    </Grid>
</Window>
