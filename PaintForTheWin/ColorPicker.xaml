<Window x:Class="PaintForTheWin.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:PaintForTheWin"
        mc:Ignorable="d"
        Title="Choose Color" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF3F3F46">
        <Label Content="Choose color from dropdown" HorizontalAlignment="Center" Foreground="Gainsboro" FontSize="13.333" FontFamily="Segoe UI Light" Height="32" VerticalAlignment="Top" Width="274" Margin="10,0" />
        <xctk:ColorPicker x:Name="_colorPicker" Margin="0,32,0,0" Height="29" VerticalAlignment="Top" />
        <Button Margin="82,77,83,0" Content="Save" Opacity="0.995" Foreground="#FF3F3F46" BorderBrush="{x:Null}" Click="SaveColor" FontSize="13.333" IsDefault="True" FontFamily="Segoe UI Light" Height="31" VerticalAlignment="Top" />
    </Grid>
</Window>
